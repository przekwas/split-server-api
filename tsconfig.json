{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"outDir": "dist",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
